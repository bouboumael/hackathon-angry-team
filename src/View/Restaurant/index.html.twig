{% extends "layout.html.twig" %}
{% block content %}
    <div class="home">
        <section id="sectionone" class="screen">
            <div id="scene">
                <div data-depth="0.1" class="bg">
                    <img src="/assets/images/background.png" alt=""/>
                </div>
                <div data-depth="0.2" class="rock1">
                    <img src="/assets/images/rock.png" alt=""/>
                </div>
                <div data-depth="1.2" class="earth">
                    <img src="/assets/images/earth.png" alt=""/>
                </div>
                <div data-depth="0.1" class="text">
                    <h1>REST'O</h1>
                </div>
                <div data-depth="0.4" class="mid">
                    <img src="/assets/images/mid.png" alt=""/>
                </div>
                <div data-depth="0.1" class="fore">
                    <img src="/assets/images/foreground.png" alt=""/>
                </div>
            </div>
        </section>
        <section id="sectiontwo" class="screen">
        <div class="show-resto">
            <div class="container">
                <header>
                    <img class="banner" src="{{ image }}" alt="{{ restaurantName.name }}">
                    <h1>{{ restaurantName.name }}</h1>
                    <img class="logo" src="{{ restaurants.0.restaurant_image }}" alt="{{ restaurants.0.restaurant_name }}"/>
                </header>
                <div class="row d-flex justify-content-around mt-3">
                    {% for restaurant in restaurants %}
                        <div class="card col-3">
                            <h2 class="mt-1 text-center">
                                {{ restaurant.menu_name | upper }}
                            </h2>
                            <img class="img-menu" src="{{ restaurant.plat_image }}" alt="{{ restaurant.plat_name }}"/>
                            <div class="card-body p-1 d-flex col-12 justify-content-between flex-wrap">
                                <p class="col-6 text-center mb-0 mt-1">
                                    Plat:
                                    <br>
                                    {{ restaurant.plat_name }}
                                </p>
                                <p class="col-6 text-center mb-0 mt-1">
                                    Boisson:
                                    <br>
                                    {{ restaurant.boisson_name }}
                                </p>
                                <p class="col-12 text-center">Prix:
                                    {{ restaurant.price }}â‚¬</p>
                            </div>
                            <div class="text-center">
                            <a class="btn btn-primary text-center border-0" href="/Cart/add/{{restaurant.menu_id}}">Commander</a>
                        </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    {% block javascript %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/parallax/3.1.0/parallax.min.js"></script>
        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
        <script src="/assets/js/index.js" type="text/javascript"></script>
    {% endblock %}
{% endblock %}
