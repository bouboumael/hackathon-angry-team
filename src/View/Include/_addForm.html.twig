<div class="container">

    <form action="" method="POST" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Nom du menu :</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Boulon de 32 sauce Ipone" value="{{ menu.name }}" name="name" required>
        </div>

        <div class="mb-3">
            <label for="plat_id" class="form-label">Plat :</label>
            <select class="form-select" name="plat_id" id="plat_id" required>
                {% for platList in platLists %}
                    <option value="{{ platList.id }}" {% if platList.id == menu.plat_id %} selected="selected" {% endif %}>{{ platList.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="mb-3">
            <label for="boisson_id" class="form-label">Boisson :</label>
            <select class="form-select" name="boisson_id" id="boisson_id" required>
                {% for boissonList in boissonLists %}
                    <option value="{{ boissonList.id }}" {% if boissonList.id == menu.boisson_id %} selected="selected" {% endif %}>{{ boissonList.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Prix :</label>
            <input type="number" class="form-control" id="price" placeholder="30" value="{{ menu.price }}" name="price" required>
        </div>

        <!-- Display errors -->

        {% if errors is empty  %}
            {% else %}
                <ul class="error">
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
        {% endif %}
        <!-- End display errors -->

        <div class="col-12 d-flex justify-content-end mb-2">
            <button class="btn btn-primary" type="submit">{{ button_name|default('Envoy√©') }}</button>
        </div>

    </form>

    {% include "Include/_admin_show.html.twig" %}

</div>
